<div style="width: 20rem">
  <div class="d-flex flex-row justify-content-between px-2">
    <p class="text-muted fw-bold">Suggestions for you</p>
    <%= link_to root_path, style: 'text-decoration: none' do %>
      <small class="fw-bold text-dark">See all</small>
    <% end %>
  </div>
  <div class="d-flex flex-column gap-3 px-2">
    <% (0..5).each do %>
      <%= render 'suggestions/suggestion' %>
    <% end %>
  </div>
</div>
